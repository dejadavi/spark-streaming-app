#!/bin/bash
set -e -u -o pipefail



get_log () {

  mkdir -p ./logs
  docker-compose run  --rm  ingest "/opt/scripts/copy_logs.sh"
}


build () {

  mkdir -p ./logs
  rm -rf ./logs/*

  mkdir -p ./tmp
  rm -rf ./tmp/*

  docker-compose build ingest
  docker-compose build spark-app
}




spark_app () {

  #Prime logs for cold start
  docker-compose  run --rm spark-app

}


shell () {
  #Prime logs for cold start
  docker-compose  run --rm spark-shell
}


run (){
  get_log
  spark_app
}

"$@"


